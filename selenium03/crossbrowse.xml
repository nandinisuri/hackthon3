<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="crossbrowser" parallel="classes">

  <test thread-count="5" name="Test in chrome">
  <parameter name="browser" value="chrome"/>
    <classes>
      <class name="selenium003.Crossbrowse"/>
    </classes>
  </test> <!--"Test in chrome -->
  
  <test thread-count="5" name="Test in firefox">
  <parameter name="browser" value="firefox"/>
    <classes>
      <class name="selenium003.Crossbrowse2"/>
    </classes>
  </test> <!-- Test in firefox -->
  
</suite> <!-- crossbrowser -->
 